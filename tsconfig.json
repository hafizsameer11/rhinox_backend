{
  "compilerOptions": {
    // Output
    "outDir": "./dist",
    "rootDir": "./",

    // Module System
    "module": "nodenext",
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],
    
    // Type Definitions
    "types": ["node"],
    
    // Emit
    "declaration": false,
    "sourceMap": false,
    "removeComments": false, // Keep comments for Swagger JSDoc annotations
    
    // Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": false, // Disabled for build compatibility
    "exactOptionalPropertyTypes": false, // Disabled for build compatibility
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    
    // Advanced
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedSideEffectImports": false, // Disabled for build compatibility
    
    // JSX (not needed for backend, but keeping for compatibility)
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "server.ts",
    "prisma.config.ts",
    "prisma/seed.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
